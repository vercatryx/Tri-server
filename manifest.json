{
  "manifest_version": 3,
  "name": "DF Billing",
  "version": "5.4.0",
  "background": { "service_worker": "background/bridge.js" },
  "description": "Diet Fantasy Auto Billing.",
  "permissions": ["storage", "tabs", "activeTab", "scripting", "sidePanel", "cookies", "browsingData"],
  "host_permissions": [
    "https://dietfantasy-nkw6.vercel.app/*",
    "https://app.uniteus.io/*",
    "https://app.auth.uniteus.io/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Open Diet Fantasy Panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },



  "side_panel": {
    "default_path": "panel.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["modules/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}